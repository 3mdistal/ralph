{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ralph Claims Ledger v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "domain",
    "id",
    "surface",
    "path",
    "claim",
    "status",
    "source"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "domain": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "surface": {
      "type": "string",
      "minLength": 1
    },
    "path": {
      "type": "string",
      "minLength": 1
    },
    "claim": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["implemented", "planned"]
    },
    "source": {
      "type": "string",
      "minLength": 1
    }
  }
}
