{
  "name": "ralph-loop",
  "version": "0.1.0",
  "description": "Ralph Loop - Autonomous coding task orchestrator for OpenCode",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "ralph": "src/cli.ts",
    "ralphctl": "src/ralphctl.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "status": "bun run src/index.ts status",
    "usage": "bun run src/index.ts usage",
    "usage:json": "bun run src/index.ts usage --json",
    "watch": "bun run src/index.ts watch",
    "sandbox:init": "bun run src/index.ts sandbox:init",
    "sandbox:seed": "bun run src/index.ts sandbox:seed",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && bun run scripts/copy-managed-templates.ts",
    "knip": "knip"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.0",
    "knip": "^5.80.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
